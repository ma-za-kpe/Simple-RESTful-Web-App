<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <% include ./partials/head %>
</head>

<body>
  <header>
    <% include ./partials/header %>
  </header>
  <div id="wrapper">
    <h2>CRUD APPLICATION</h2>
    <div id="userInfo">
      <h2>UserInfo</h2>
      <p> <strong> Name: <span id='userInfoName'></span> </strong> </p> <br>
      <p> <strong> Age: <span id='userInfoAge'></span> </strong> </p> <br>
      <p> <strong> Gender: <span id='userInfoGender'></span> </strong> </p> <br>
      <p> <strong> Location: <span id='userInfoLocation'></span> </strong> </p> <br>

    </div>


    <div id="userList">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Delete?</th>
          </tr>
        </thead>
        <tbody>

        </tbody>
      </table>
    </div>

    <div id="addUser">

      <form action="/">
        <div class="form-group">
          <label for="username">Username</label>
          <input id="inputUserName" type="text" class="form-control" placeholder="Username">
        </div>
        <div class="form-group">
          <label for="Email">Email</label>
          <input id="inputUserEmail" type="email" class="form-control" placeholder="Email" >
        </div>
        <div class="form-group">
          <label for="Full Name">Full Name</label>
          <input id="inputUserFullname" type="text" class="form-control" placeholder="Full Name">
        </div>
        <div class="form-group">
          <label for="Age">Age</label>
          <input id="inputUserAge" type="number" class="form-control" placeholder="Age">
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input id="inputUserLocation" type="text" class="form-control" placeholder="Location">
        </div>
        <div class="form-group">
          <label for="username">gender</label>
          <input id="inputUserGender" type="text" class="form-control" placeholder="gender">
        </div>

        <button type="submit" id="btnAddUser" class="btn btn-default">Add User</button>
      </form>

    </div>

  </div>

  <footer>
    <% include ./partials/footer %>
  </footer>

  <%include ./partials/script %>

</body>

</html>
